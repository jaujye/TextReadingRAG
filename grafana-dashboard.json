{
  "dashboard": {
    "title": "TextReadingRAG Monitoring Dashboard",
    "tags": ["rag", "fastapi", "chromadb", "monitoring"],
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 1,
    "refresh": "10s",
    "panels": [
      {
        "id": 1,
        "title": "API Request Rate",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "rate(http_requests_total{job=\"textreadingrag-api\"}[5m])",
            "legendFormat": "{{method}} {{endpoint}} - {{status}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "reqps", "label": "Requests/sec"},
          {"format": "short"}
        ]
      },
      {
        "id": 2,
        "title": "API Response Time (P95)",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket{job=\"textreadingrag-api\"}[5m]))",
            "legendFormat": "{{method}} {{endpoint}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "s", "label": "Latency"},
          {"format": "short"}
        ]
      },
      {
        "id": 3,
        "title": "RAG Query Performance",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(rag_retrieval_duration_seconds_bucket[5m]))",
            "legendFormat": "Retrieval P95",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.95, rate(rag_reranking_duration_seconds_bucket[5m]))",
            "legendFormat": "Reranking P95",
            "refId": "B"
          },
          {
            "expr": "histogram_quantile(0.95, rate(rag_generation_duration_seconds_bucket[5m]))",
            "legendFormat": "Generation P95",
            "refId": "C"
          }
        ],
        "yaxes": [
          {"format": "s", "label": "Duration"},
          {"format": "short"}
        ]
      },
      {
        "id": 4,
        "title": "Error Rate by Component",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
        "targets": [
          {
            "expr": "rate(rag_retrieval_errors_total[5m])",
            "legendFormat": "Retrieval Errors",
            "refId": "A"
          },
          {
            "expr": "rate(rag_query_expansion_errors_total[5m])",
            "legendFormat": "Query Expansion Errors",
            "refId": "B"
          },
          {
            "expr": "rate(rag_reranking_errors_total[5m])",
            "legendFormat": "Reranking Errors",
            "refId": "C"
          },
          {
            "expr": "rate(rag_document_processing_errors_total[5m])",
            "legendFormat": "Document Processing Errors",
            "refId": "D"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Errors/sec"},
          {"format": "short"}
        ]
      },
      {
        "id": 5,
        "title": "System CPU Usage",
        "type": "graph",
        "gridPos": {"h": 8, "w": 8, "x": 0, "y": 16},
        "targets": [
          {
            "expr": "100 - (avg by(instance) (irate(node_cpu_seconds_total{mode=\"idle\"}[5m])) * 100)",
            "legendFormat": "{{instance}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "percent", "label": "CPU %", "max": 100},
          {"format": "short"}
        ]
      },
      {
        "id": 6,
        "title": "System Memory Usage",
        "type": "graph",
        "gridPos": {"h": 8, "w": 8, "x": 8, "y": 16},
        "targets": [
          {
            "expr": "(1 - (node_memory_MemAvailable_bytes / node_memory_MemTotal_bytes)) * 100",
            "legendFormat": "{{instance}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "percent", "label": "Memory %", "max": 100},
          {"format": "short"}
        ]
      },
      {
        "id": 7,
        "title": "Disk Usage",
        "type": "graph",
        "gridPos": {"h": 8, "w": 8, "x": 16, "y": 16},
        "targets": [
          {
            "expr": "100 - ((node_filesystem_avail_bytes{mountpoint=\"/\"} / node_filesystem_size_bytes{mountpoint=\"/\"}) * 100)",
            "legendFormat": "{{instance}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "percent", "label": "Disk %", "max": 100},
          {"format": "short"}
        ]
      },
      {
        "id": 8,
        "title": "ChromaDB Operations",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 24},
        "targets": [
          {
            "expr": "rate(chromadb_queries_total[5m])",
            "legendFormat": "Queries/sec",
            "refId": "A"
          },
          {
            "expr": "rate(chromadb_inserts_total[5m])",
            "legendFormat": "Inserts/sec",
            "refId": "B"
          }
        ],
        "yaxes": [
          {"format": "ops", "label": "Operations/sec"},
          {"format": "short"}
        ]
      },
      {
        "id": 9,
        "title": "Redis Cache Hit Rate",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 24},
        "targets": [
          {
            "expr": "rate(redis_keyspace_hits_total[5m]) / (rate(redis_keyspace_hits_total[5m]) + rate(redis_keyspace_misses_total[5m])) * 100",
            "legendFormat": "Cache Hit Rate",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "percent", "label": "Hit Rate %", "max": 100},
          {"format": "short"}
        ]
      },
      {
        "id": 10,
        "title": "Document Processing Queue",
        "type": "graph",
        "gridPos": {"h": 8, "w": 8, "x": 0, "y": 32},
        "targets": [
          {
            "expr": "rag_documents_pending",
            "legendFormat": "Pending",
            "refId": "A"
          },
          {
            "expr": "rag_documents_processing",
            "legendFormat": "Processing",
            "refId": "B"
          },
          {
            "expr": "rag_documents_completed",
            "legendFormat": "Completed",
            "refId": "C"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Documents"},
          {"format": "short"}
        ]
      },
      {
        "id": 11,
        "title": "Retrieval Quality Score",
        "type": "graph",
        "gridPos": {"h": 8, "w": 8, "x": 8, "y": 32},
        "targets": [
          {
            "expr": "avg(rag_retrieval_quality_score)",
            "legendFormat": "Avg Quality",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.95, rate(rag_retrieval_quality_score_bucket[5m]))",
            "legendFormat": "P95 Quality",
            "refId": "B"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Score", "max": 1, "min": 0},
          {"format": "short"}
        ]
      },
      {
        "id": 12,
        "title": "Container Resource Usage",
        "type": "graph",
        "gridPos": {"h": 8, "w": 8, "x": 16, "y": 32},
        "targets": [
          {
            "expr": "rate(container_cpu_usage_seconds_total{name!=\"\"}[5m]) * 100",
            "legendFormat": "{{name}} CPU",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "percent", "label": "CPU %"},
          {"format": "short"}
        ]
      },
      {
        "id": 13,
        "title": "Active Requests",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 40},
        "targets": [
          {
            "expr": "http_requests_in_progress{job=\"textreadingrag-api\"}",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "background",
          "graphMode": "area"
        }
      },
      {
        "id": 14,
        "title": "Total Documents Indexed",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 6, "y": 40},
        "targets": [
          {
            "expr": "rag_documents_indexed_total",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "background",
          "graphMode": "area"
        }
      },
      {
        "id": 15,
        "title": "Cache Size",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 40},
        "targets": [
          {
            "expr": "redis_memory_used_bytes / 1024 / 1024",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "MB"
          }
        },
        "options": {
          "colorMode": "background",
          "graphMode": "area"
        }
      },
      {
        "id": 16,
        "title": "Service Health",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 18, "y": 40},
        "targets": [
          {
            "expr": "up{job=~\"textreadingrag-api|chromadb|redis\"}",
            "legendFormat": "{{job}}",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "background",
          "graphMode": "none",
          "text": {
            "valueSize": 50
          }
        },
        "fieldConfig": {
          "defaults": {
            "mappings": [
              {"type": "value", "value": "1", "text": "UP"},
              {"type": "value", "value": "0", "text": "DOWN"}
            ],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 1, "color": "green"}
              ]
            }
          }
        }
      }
    ]
  }
}
