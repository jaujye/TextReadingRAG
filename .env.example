# Application Settings
APP_NAME="TextReadingRAG"
APP_VERSION="1.0.0"
DEBUG=True
LOG_LEVEL="INFO"

# FastAPI Settings
HOST="0.0.0.0"
PORT=8000
RELOAD=True

# OpenAI Configuration
OPENAI_API_KEY="your-openai-api-key-here"
OPENAI_MODEL="gpt-4o-mini"
OPENAI_EMBEDDING_MODEL="text-embedding-3-small"
OPENAI_TEMPERATURE=0.1
OPENAI_MAX_TOKENS=2048

# LlamaParse Configuration (Optional - for advanced PDF parsing)
LLAMA_CLOUD_API_KEY="your-llama-cloud-api-key-here"

# ChromaDB Configuration
CHROMA_HOST="localhost"
CHROMA_PORT=8000
CHROMA_PERSIST_DIRECTORY="./data/chroma_db"
CHROMA_COLLECTION_NAME="pdf_documents"

# Vector Store Settings
EMBEDDING_DIMENSION=1536
CHUNK_SIZE=512
CHUNK_OVERLAP=128
MAX_CHUNKS_PER_DOC=1000

# Language Support Settings
SUPPORTED_LANGUAGES="en,zh"  # en=English, zh=Chinese (Traditional & Simplified)
DEFAULT_LANGUAGE="en"
ENABLE_LANGUAGE_DETECTION=True
CHINESE_CHUNK_SIZE=256  # Characters for Chinese text
CHINESE_CHUNK_OVERLAP=64  # Overlap for Chinese text

# Hybrid Search Configuration
DENSE_TOP_K=10
SPARSE_TOP_K=10
HYBRID_TOP_K=5
ALPHA=0.5  # Weight for dense vs sparse search (0.0=sparse only, 1.0=dense only)

# Reranking Configuration
RERANK_TOP_N=3
RERANK_MODEL="BAAI/bge-reranker-large"
USE_LLM_RERANK=True

# Query Expansion Configuration
ENABLE_QUERY_EXPANSION=True
QUERY_EXPANSION_METHODS="llm"  # Use "llm" for multilingual, "synonym" for English only
MAX_EXPANDED_QUERIES=3

# File Upload Configuration
MAX_FILE_SIZE=50  # MB
ALLOWED_EXTENSIONS=".pdf,.docx,.txt"
UPLOAD_DIR="./data/uploads"
PROCESSED_DIR="./data/processed"

# Redis Configuration (Optional - for caching)
REDIS_HOST="localhost"
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=""
ENABLE_CACHE=False
CACHE_TTL=3600  # seconds

# Logging Configuration
LOG_FILE="./logs/app.log"
LOG_MAX_SIZE=10  # MB
LOG_BACKUP_COUNT=5
LOG_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"

# Security Settings
SECRET_KEY="your-super-secret-key-change-this-in-production"
CORS_ORIGINS="http://localhost:3000,http://127.0.0.1:3000"
CORS_ALLOW_CREDENTIALS=True

# Performance Settings
MAX_CONCURRENT_UPLOADS=5
ENABLE_ASYNC_PROCESSING=True
BATCH_SIZE=10

# Monitoring and Observability (Optional)
ENABLE_METRICS=False
METRICS_PORT=9090

# Development Settings
MOCK_EMBEDDINGS=False  # Set to True for development without API keys
MOCK_LLM_RESPONSES=False